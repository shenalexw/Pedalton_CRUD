<div class="container">
    <h1 class="display-4">Videos</h1>

    <div class="mb-3">
        <table class = "table">
        {{!-- Header section --}}
        <thead>
            {{!-- For just the first row, we print each key of the row object as a header cell so we
            know what each column means when the page renders --}}
            <tr>
                {{#each columnNames}}
                <th>
                    {{this}}
                </th>
                {{/each}}
            </tr>
        </thead>
        {{!-- Body section --}}
        <tbody>
            {{!-- For each row, print the id, fname, lname, email in order --}}
            {{#each data}}
            <tr>
                <td>{{this.videoID}}</td>
                <td>{{this.instructorID}}</td>
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>{{this.type}}</td>
                <td>{{this.difficulty}}</td>
                <td>{{this.duration}}</td>
            </tr>
            {{/each}}
        </tbody>
        </table>
    </div>

    <div class="row">
        <div class="col-6">
            <form id = "add-video" method = "POST" action="videos/add-video">
                <h6>Add Video</h6>

                <div class="mb-3">
                    <label for="addInstructorID" class="form-label">
                        Instructor ID
                    </label>
                    <select
                        name="addInstructorID"
                        id="addInstructorID"
                        class="form-select"
                    >
                        <option value="" selected>
                            Select an Instructor ID
                        </option>
                        {{#each instructorIDs}}
                            <option value={{this.instructorID}}>{{this.instructorID}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="form-floating mb-3">
                    <input
                        type="text"
                        name="addName"
                        id="addName"
                        class="form-control"
                        placeholder="Name"
                        required
                    />
                    <label for="name" class="form-label">Name</label>
                </div>

                <div class="form-floating mb-3">
                    <input
                        type="text"
                        name="addDescription"
                        id="addDescription"
                        class="form-control"
                        placeholder="Description"
                        required
                    />
                    <label for="description" class="form-label">
                        Description
                    </label>
                </div>

                <div class="form-floating mb-3">
                    <input
                        type="text"
                        name="addType"
                        id="addType"
                        class="form-control"
                        placeholder="Type"
                        required
                    />
                    <label for="type" class="form-label">Type</label>
                </div>

                <div class="form-floating mb-3">
                    <select
                        name="addDifficulty"
                        id="addDifficulty"
                        class="form-select"
                        required
                    >
                        <option value="Beginner" selected>Beginner</option>
                        <option value="Intermediate">Intermediate</option>
                        <option value="Advanced">Advanced</option>
                    </select>

                    <label for="nameFilter" class="form-label h6"> Difficulty </label>
                </div>

                <div class="form-floating mb-3">
                    <input
                        type="number"
                        name="addDuration"
                        id="addDuration"
                        step="1"
                        min="1"
                        class="form-control"
                        placeholder="Duration"
                        required
                    />
                    <label for="duration" class="form-label">
                        Duration (seconds)
                    </label>
                </div>

                <button class="btn btn-primary">Add</button>
            </form>
        </div>

        <div class="col-6">
            <form id="update-video" action="/videos/update-video" method="POST">
                <h6>Update InstructorID</h6>

                <div class="mb-3">
                    <label for="updateVideoID" class="form-label">
                        Video ID
                    </label>
                    <select
                        name="updateVideoID"
                        id="updateVideoID"
                        class="form-select"
                        required
                    >
                        <option value="" selected>
                            Select a Video ID
                        </option>
                        {{#each data}}
                            <option value={{this.videoID}}>{{this.videoID}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="mb-3">
                    <label for="updateInstructorID" class="form-label">
                        New Instructor ID
                    </label>
                    <select
                        name="updateInstructorID"
                        id="updateInstructorID"
                        class="form-select"
                        required
                    >
                        <option value="" selected>
                            Select an Instructor ID
                        </option>
                        {{#each instructorIDs}}
                            <option value={{this.instructorID}}>{{this.instructorID}}</option>
                        {{/each}}
                        <option value="remove">Remove current Instructor ID</option>
                    </select>
                </div>

                <button class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>
