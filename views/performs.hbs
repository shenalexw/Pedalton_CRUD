<div class="container">
    <h1 class="display-4">Performs</h1>

    <div class="mb-3">
        <table class = "table">
        {{!-- Header section --}}
        <thead>
            {{!-- For just the first row, we print each key of the row object as a header cell so we
            know what each column means when the page renders --}}
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
            </tr>
        </thead>
        {{!-- Body section --}}
        <tbody>
            {{!-- For each row, print the id, fname, lname, email in order --}}
            {{#each data}}
            <tr>
                <td>{{this.performsID}}</td>
                <td>{{this.userID}}</td>
                <td>{{this.videoID}}</td>
                <td>{{this.completed}}</td>
                <td>{{this.bookmarked}}</td>
                <td>{{this.timeCompleted}}</td>
            </tr>
            {{/each}}
        </tbody>
        </table>
    </div>

    <div class="row">
        <div class="col-6">
            <form action="" class="mb-3">
                <div class="mb-3">
                    <h6></h6>
                    <label for="deleteEntry" class="form-label h6">
                        Delete Performs Entry
                    </label>
                    <select
                        name="deleteEntry"
                        id="deleteEntry"
                        class="form-select"
                    >
                        <option value="">Select Performs ID</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                    </select>
                </div>

                <button class="btn btn-primary">Delete</button>
            </form>
        </div>

        <div class="col-6">
            <form action="" class="mb-3">
                <h6>Add Performs Entry</h6>

                <div class="form-floating mb-3">
                    <input
                        type="number"
                        id="userID"
                        step="1"
                        min="1"
                        class="form-control"
                        placeholder="User ID"
                    />
                    <label for="userID" class="form-label">
                        User ID
                    </label>
                </div>

                <div class="form-floating mb-3">
                    <input
                        type="number"
                        id="videoID"
                        step="1"
                        min="1"
                        class="form-control"
                        placeholder="Video ID"
                    />
                    <label for="videoID" class="form-label">
                        Video ID
                    </label>
                </div>

                <div class="form-floating mb-3">
                    <input
                        type="number"
                        id="completed"
                        step="1"
                        min="0"
                        class="form-control"
                        placeholder="0"
                    />
                    <label for="completed" class="form-label">
                        Completed
                    </label>
                </div>

                <div class="mb-3">
                    <label for="bookmarked" class="form-label">
                        Bookmarked
                    </label>
                    <select
                        id="bookmarked"
                        name="bookmarked"
                        class="form-select"
                    >
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="timeCompleted" class="form-label">
                        Time Completed
                    </label>
                    <input
                        type="datetime-local"
                        id="timeCompleted"
                        name="timeCompleted"
                        class="form-control"
                    />
                </div>

                <button class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>
</div>
