<div class="container mb-3">
    <h1 class="display-4">Update User</h1>

    <div class="row">
        <div class="col-3"></div>

        <div class="col-6">
            <form id="update-user-form" action="update-user" method="POST" class="mb-3">
                <h6>Update User</h6>
                <p>User ID: {{userData.userID}}</p>

                <input type="hidden" name="userID" value={{userData.userID}}>

                <div class="form-floating mb-3">
                    <input
                        type="text"
                        id="updateFirstName"
                        class="form-control"
                        placeholder="Enter first name"
                        name="updateFirstName"
                        value={{userData.firstName}}
                        required
                    />
                    <label for="updateFirstName" class="form-label">
                        First Name
                    </label>
                </div>

                <div class="form-floating mb-3">
                    <input
                        type="text"
                        id="updateLastName"
                        class="form-control"
                        placeholder="Enter last name"
                        name="updateLastName"
                        value={{userData.lastName}}
                        required
                    />
                    <label for="updateLastName" class="form-label">
                        Last Name
                    </label>
                </div>

                <div class="form-floating mb-3">
                    <input
                        type="email"
                        id="updateEmail"
                        class="form-control"
                        placeholder="Enter email"
                        name="updateEmail"
                        value={{userData.email}}
                        required
                    />
                    <label for="updateEmail" class="form-label">
                        Email Address
                    </label>
                </div>

                <button class="btn btn-primary">Update</button>
            </form>
        </div>

        <div class="col-3"></div>
    </div>
</div>
<script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"
></script>