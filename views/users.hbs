<div class="container mb-3">
    <h1 class="display-4">Users</h1>

    {{!-- Create a table --}}
    <table class = "table">
    {{!-- Header section --}}
    <thead>
        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>
    {{!-- Body section --}}
    <tbody>
        {{!-- For each row, print the id, fname, lname, email in order --}}
        {{#each data}}
        <tr>
            <td>{{this.userID}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.email}}</td>
        </tr>
        {{/each}}
    </tbody>
    </table>

    <div class="row">
        <div class="col-6">
            <form method = "GET" class="mb-3">
                <label for="nameFilter" class="form-label h6">
                    Filter Users by First Name
                </label>

                <select
                    name="nameFilter"
                    id="nameFilter"
                    class="form-select mb-3"
                >
                    <option value="" selected>None</option>
                    {{#each initialData}}
                        <option value={{this.firstName}}>{{this.firstName}}</option>
                    {{/each}}
                </select>

                <button class="btn btn-primary">Filter</button>
            </form>
        </div>

        <div class="col-6">
            <form id="update-user-form" action="update-user" method="GET" class="mb-3">
                <h6>Update User</h6>

                <div class="mb-3">
                    <label for="userID" class="form-label" hidden>
                        User ID
                    </label>
                    <select
                        name="userID"
                        id="userID"
                        class="form-select"
                        required
                    >
                        <option value="" selected>
                            Select a User ID
                        </option>
                        {{#each initialData}}
                            <option value={{this.userID}}>{{this.userID}}</option>
                        {{/each}}
                    </select>
                </div>

                <button class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <form id = "add-user" method = "POST" action="users/add-user" class="mb-3">
                <h6>Add User</h6>

                <div class="form-floating mb-3">
                    <input
                        type="text"
                        name="addFirstName"
                        id="addFirstName"
                        class="form-control"
                        placeholder="Enter first name"
                        required
                    />
                    <label for="addFirstName">First Name</label>
                </div>

                <div class="form-floating mb-3">
                    <input
                        type="text"
                        name="addLastName"
                        id="addLastName"
                        class="form-control"
                        placeholder="Enter last name"
                        required
                    />
                    <label for="addLastName" class="form-label">
                        Last Name
                    </label>
                </div>

                <div class="form-floating mb-3">
                    <input
                        type="email"
                        name="addEmail"
                        id="addEmail"
                        class="form-control"
                        placeholder="Enter email"
                        required
                    />
                    <label for="addEmail" class="form-label">
                        Email Address
                    </label>
                </div>

                <button class="btn btn-primary">Add</button>
            </form>
        </div>

    </div>
</div>
